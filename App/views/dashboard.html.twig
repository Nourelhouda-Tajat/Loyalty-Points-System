{% extends "base.html.twig" %}

{% block title %}Dashboard{% endblock %}

{% block content %}
<div class="dashboard">
    <div class="dashboard-header">
        <h1>Dashboard</h1>
        <p class="dashboard-subtitle">Bienvenue {{ user.name }}</p>
    </div>

    <div class="dashboard-stats">
        <div class="stat-card">
            <h3>Total Points</h3>
            <p class="stat-value">{{ user.total_points }}</p>
        </div>

        <div class="stat-card secondary">
            <h3>Email</h3>
            <p>{{ user.email }}</p>
        </div>
    </div>

    <div class="dashboard-history">
        <h2>Historique des points</h2>

        {% if history is empty %}
            <p class="empty-history">Aucune transaction</p>
        {% else %}
        <table class="history-table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Description</th>
                    <th>Points</th>
                    <th>Solde</th>
                </tr>
            </thead>
            <tbody>
                {% for row in history %}
                <tr>
                    <td>{{ row.createdat }}</td>
                    <td>{{ row.description }}</td>
                    <td class="points-earned">+{{ row.amount }}</td>
                    <td>{{ row.balance_after }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        {% endif %}
    </div>
</div>
{% endblock %}